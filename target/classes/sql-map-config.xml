<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>


	<!-- Mabatis first 설정에 필요한 내용 -->

	<!-- Alias 설정 -->
	<typeAliases>

		<!-- mapping 파일에서는 resultType에 사용 -->
		<typeAlias alias="board" type="com.tripfull.biz.board.flightBoardVO"/>
		<typeAlias alias="lantrip" type="com.tripfull.biz.lantrip.LanTripVO"/>
		<typeAlias alias="story" type="com.tripfull.biz.story.StoryVO"/>

	</typeAliases>

	<!-- Sql Mapper 설정 -->
	<mappers>

		<!-- 매핑파일 설정 -->
		<mapper resource="mappings/tripfull-board-mapping.xml"/>
		<mapper resource="mappings/tripfull-lantrip-mapping.xml"/>
		<mapper resource="mappings/tripfull-story-mapping.xml"/>
	</mappers>

</configuration>
